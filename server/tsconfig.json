{
    "compilerOptions": {
        "declarationMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "rootDir": ".",
        "outDir": "build",
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "commonjs",
        "lib": [
            "es2019"
        ],
        "resolveJsonModule": true,
        "target": "es6",
        "esModuleInterop": true,
        "noImplicitAny": false,
    },
    "include": [
        "src/**/*.ts"
    ],
    "target": "es6"
}